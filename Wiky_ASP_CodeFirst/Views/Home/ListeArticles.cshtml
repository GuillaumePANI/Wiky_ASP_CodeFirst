
@{
    ViewBag.Title = "Liste Articles";
}
@model IEnumerable<Wiky_ASP_CodeFirst.Models.Article>
<h2>Articles Existants</h2>

<table style="width:100%">
    <tr>
        <th>Theme</th>
        <th>Auteur</th>
        <th>Date</th>
        <th>Contenu</th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(Model => item.Theme)
            </td>
            <td>
                @Html.DisplayFor(Model => item.Auteur)
            </td>
            <td>
                @Html.DisplayFor(Model => item.DateCreation)
            </td>
            <td>
                @Html.DisplayFor(Model => item.Contenu)
            </td>
            <td> @Html.ActionLink("Détail", "DetailArticle", "Home", new { id = item.Id_Article }, null)  |  @Html.ActionLink("Edit", "EditArticle", "Home", new { id = item.Id_Article }, null) |  @Html.ActionLink("Supprimer", "DeleteArticle", "Home", new { id = item.Id_Article }, null)  </td>
        </tr>

    }

</table>